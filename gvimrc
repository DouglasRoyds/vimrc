set lines=35 columns=128            " Sensible starting size for a floating window

set visualbell
set t_vb=                           " t_vb is reset when the GUI starts, so we have to turn it off again here

set guifont=Consolas:h11            " Nice font on Windows, have yet to choose one for Linux
set guioptions-=m                   " No menu bar 
set guioptions-=T                   " No toolbar buttons

set cursorline
highlight cursorline guibg=Grey97

